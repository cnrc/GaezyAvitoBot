# Токен Telegram бота от @BotFather
# Получите токен, создав бота через @BotFather в Telegram
# Обязательно: необходимо для работы бота
BOT_TOKEN=your_telegram_bot_token_here

# Строка подключения к PostgreSQL
# Формат: postgresql+asyncpg://username:password@host:port/database_name
# Пример для локальной разработки: postgresql+asyncpg://postgres:password@localhost:5432/gaezy_avito
# Пример для Docker: postgresql+asyncpg://postgres:password@host.docker.internal:5432/gaezy_avito
# Обязательно: необходимо для работы с базой данных
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/gaezy_avito

# Токен YooKassa для обработки платежей
# Получите токен в личном кабинете YooKassa
# Обязательно: необходимо для обработки платежей
YOOKASSA_TOKEN=your_yookassa_token_here

# Внутренний токен бота для безопасности
# Обязательно: установите уникальный токен
API_TOKEN=your_bot_api_token_here

# URL API парсера Avito
# Должен указывать на адрес запущенного сервиса parser_avito
# Пример для локальной разработки: http://localhost:8000
# Пример для Docker: http://localhost:8000 или http://parser_avito:8000 (если в одной сети)
# Обязательно: необходимо для работы с парсером
PARSER_API_URL=http://localhost:8000

# Токен для доступа к API парсера
# Должен совпадать с API_TOKEN в parser_avito/.env
# Обязательно: необходимо для авторизации запросов к парсеру
PARSER_API_TOKEN=your_api_token_here
